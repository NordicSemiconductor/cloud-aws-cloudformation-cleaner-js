{
  "name": "@nordicsemiconductor/cloudformation-cleaner",
  "version": "0.0.0-development",
  "description": "Cleans old CloudFormation stacks and log groups, e.g. from CI runs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js.git"
  },
  "keywords": [
    "aws",
    "cloudformation"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js#readme",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.428.0",
    "@aws-sdk/client-lambda": "3.428.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.94",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.93",
    "@types/glob": "8.1.0",
    "@types/node": "20.8.5",
    "@types/yazl": "2.4.3",
    "aws-cdk-lib": "2.101.0",
    "cdk": "2.101.0",
    "constructs": "10.3.0",
    "glob": "10.3.10",
    "tsx": "3.13.0",
    "yazl": "2.5.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "3.428.0",
    "@aws-sdk/client-iam": "3.428.0",
    "@aws-sdk/client-s3": "3.428.0",
    "@aws-sdk/client-ssm": "3.428.0",
    "@nordicsemiconductor/from-env": "2.0.0"
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc"
}
