{
  "name": "@nordicsemiconductor/cloudformation-cleaner",
  "version": "0.0.0-development",
  "description": "Cleans old CloudFormation stacks and log groups, e.g. from CI runs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js.git"
  },
  "keywords": [
    "Cloud",
    "AWS",
    "Nordic Semiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js#readme",
  "devDependencies": {
    "@aws-cdk/aws-events": "1.127.0",
    "@aws-cdk/aws-events-targets": "1.127.0",
    "@aws-cdk/aws-iam": "1.127.0",
    "@aws-cdk/aws-lambda": "1.127.0",
    "@aws-cdk/aws-logs": "1.127.0",
    "@aws-cdk/core": "1.127.0",
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-angular": "13.2.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "9.1.0",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "8.1.7",
    "@types/glob": "7.1.4",
    "@types/node": "16.7.6",
    "@types/yazl": "2.4.2",
    "cdk": "1.127.0",
    "eslint": "7.32.0",
    "glob": "7.2.0",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "typescript": "4.4.3",
    "yazl": "2.5.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.36.0",
    "@aws-sdk/client-cloudwatch-logs": "3.36.0",
    "@aws-sdk/client-s3": "3.36.0",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0"
  }
}
