{
  "name": "@bifravst/cloudformation-cleaner",
  "version": "0.0.0-development",
  "description": "Cleans old CloudFormation stacks, e.g. from CI runs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "check-node-version --package",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/cloudformation-cleaner.git"
  },
  "keywords": [
    "Cloud",
    "Bifravst",
    "AWS",
    "NordicSemiconductor"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/bifravst/cloudformation-cleaner/issues"
  },
  "homepage": "https://github.com/bifravst/cloudformation-cleaner#readme",
  "dependencies": {
    "@aws-cdk/aws-events": "1.73.0",
    "@aws-cdk/aws-events-targets": "1.73.0",
    "@aws-cdk/aws-iam": "1.73.0",
    "@aws-cdk/aws-lambda": "1.73.0",
    "@aws-cdk/aws-logs": "1.73.0",
    "@aws-cdk/core": "1.73.0",
    "cdk": "1.73.0",
    "check-node-version": "4.0.3",
    "snyk": "1.425.3"
  },
  "devDependencies": {
    "@bifravst/code-style": "8.0.134",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@types/node": "14.14.7",
    "aws-sdk": "2.791.0",
    "eslint": "7.13.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "typescript": "4.0.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "snyk": true
}
