{
  "name": "@nordicsemiconductor/cloudformation-cleaner",
  "version": "0.0.0-development",
  "description": "Cleans old CloudFormation stacks and log groups, e.g. from CI runs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js.git"
  },
  "keywords": [
    "aws",
    "cloudformation"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-cleaner-js#readme",
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "11.0.179",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.35",
    "@types/glob": "8.0.1",
    "@types/node": "18.13.0",
    "@types/yazl": "2.4.2",
    "aws-cdk-lib": "2.65.0",
    "cdk": "2.65.0",
    "constructs": "10.1.251",
    "glob": "8.1.0",
    "tsx": "3.12.3",
    "yazl": "2.5.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.271.0",
    "@aws-sdk/client-cloudwatch-logs": "3.271.0",
    "@aws-sdk/client-iam": "3.271.0",
    "@aws-sdk/client-s3": "3.271.0",
    "@aws-sdk/client-ssm": "3.271.0",
    "@nordicsemiconductor/from-env": "1.0.3"
  }
}
